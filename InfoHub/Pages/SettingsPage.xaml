<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InfoHub.Pages.SettingsPage"
             Title="Settings">
    <VerticalStackLayout>
        <Label Text="Weather settings" Margin="20,20,20,0" Opacity="0.6" />
        <Button Margin="20,0" HeightRequest="80" CornerRadius="10" BorderWidth="2" BorderColor="Gray" x:Name="WeatherLocations" Text="Weather locations" Clicked="WeatherLocations_Clicked" />
        <Button Margin="20,0" HeightRequest="80" CornerRadius="10" BorderWidth="2" BorderColor="Gray" x:Name="WeatherSettings" Text="Weather settings" Clicked="WeatherSettings_Clicked" />
        
        <Label Text="Other" Margin="20,20,20,0" Opacity="0.6" />
        <Button Margin="20,0" HeightRequest="80" CornerRadius="10" BorderWidth="2" BorderColor="Gray" x:Name="LegalSettings" Text="Legal" Clicked="LegalSettings_Clicked" />
        <Button Margin="20,0" HeightRequest="80" CornerRadius="10" BorderWidth="2" BorderColor="Gray" x:Name="CreditsBtn" Text="Credits" Clicked="CreditsBtn_Clicked" />
    </VerticalStackLayout>
</ContentPage>