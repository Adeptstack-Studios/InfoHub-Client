<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InfoHub.Pages.LegalPage"
             Title="Legal">
    <VerticalStackLayout>
        <FlexLayout Margin="20,20,20,0" >
            <Image Source="Resources/Images/adeptstack.png" WidthRequest="64" />
            <Label Text="Adeptstack" VerticalOptions="End" Margin="6.5,0,5,1.5" FontSize="24" FontFamily="OpenSansSemibold" />
        </FlexLayout>
        <Label Text="Publisher and developer of the app" FontSize="14" Margin="20,20,20,0" Opacity="0.6" />
        <Button Margin="20,0" HeightRequest="80" CornerRadius="10" BorderWidth="2" BorderColor="Gray" x:Name="Imprint" Text="imprint" Clicked="Imprint_Clicked" />
        <Button Margin="20,0" HeightRequest="80" CornerRadius="10" BorderWidth="2" BorderColor="Gray" x:Name="privacy" Text="Privacy" Clicked="privacy_Clicked" />
        <Button Margin="20,0" HeightRequest="80" CornerRadius="10" BorderWidth="2" BorderColor="Gray" x:Name="License" Text="License" Clicked="License_Clicked" />
    </VerticalStackLayout>
</ContentPage>